---
import Layout from "../layouts/Layout.astro";
import CoffeeCard from "../components/CoffeeCard.astro";

import type { CoffeeType } from "../types/index";

const response = await fetch(
	"https://raw.githubusercontent.com/devchallenges-io/web-project-ideas/main/front-end-projects/data/simple-coffee-listing-data.json",
);
const data: CoffeeType[] = await response.json();
---

<Layout title="Coffe Shop">
	<div
		class="bg-[url(/backgrounds/bg-cafe.jpg)] h-[250px] md:h-[350px] bg-no-repeat bg-cover bg-center"
	>
	</div>
	<main
		class="flex justify-center -mt-32 md:-mt-44 rounded-xl mx-10 sm:mx-28 overflow-hidden"
	>
		<section
			class="bg-[var(--gray-dark)] flex flex-col items-center px-10 py-20 w-full"
		>
			<div class="md:w-[700px] lg:w-[900px]">
				<div class="relative md:px-28">
					<img
						class="w-72 absolute -right-24 md:right-28 md:-top-16 z-10"
						src="/backgrounds/vector.svg"
						alt="vector"
						aria-hidden="true"
					/>
					<div class="text-center z-20 relative">
						<h2 class="text-3xl text-[var(--skin)] pb-3">
							Our Collection
						</h2>
						<p class="text-[var(--gray)]">
							Introducing our Coffee Collection, a selection of
							unique coffees from different roast types and
							origins, expertly roasted in small batches and
							shipped fresh weekly.
						</p>
					</div>
				</div>

				<div class="flex md:gap-x-5 justify-center items-center mt-10">
					<button
						type="button"
						class="bg-[var(--gray)] text-[var(--skin)] px-4 py-2 font-semibold rounded-lg"
					>
						All Products
					</button>
					<button
						class="text-[var(--skin)] px-4 py-2 font-semibold rounded-lg"
						type="button"
					>
						Available Now
					</button>
				</div>
			</div>

			<div
				class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16 md:gap-10 justify-center mt-10"
			>
				<CoffeeCard data={data} />
			</div>
		</section>
	</main></Layout
>
